
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Haber Sitesi</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
</head>

<body>

    <!-- NavBar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <a class="navbar-brand" href="">Haber Sitesi</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Index">Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Kullanici/Giris">Giriş</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- NavBar -->

    <div class="container-fluid" style="margin:100px 0px 100px 0px">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="py-3 bg-dark fixed-bottom">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; @DateTime.Now.Year</p>
        </div>
    </footer>
    <!-- Footer -->
</body>
</html>
